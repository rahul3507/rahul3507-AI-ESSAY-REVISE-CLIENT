{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/": ["./src/"]
    },
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/*/"],
  "exclude": ["node_modules", "dist"]
}
